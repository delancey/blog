<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Entry:</strong>
  <%= @post.post_entry %>
</p>

<p>
  <strong>Username:</strong>
  <%= link_to @post.user.username, @post.user.username %>
</p>

<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-warning' %> |
<%= link_to 'Back', posts_path, class: 'btn btn-info' %>

<br>
<hr>

<%= link_to 'Add Comment', new_comment_path, class: 'btn btn-success' %>

<br>
<br>

<% if @post.comments.presence %>
  <div class="panel panel-info">
    <div class="panel-heading">
      <h4>Comments</h4>
    </div>
    <% @post.comments.each do |comment| %>
      <div class="panel-body">
        <p><strong><%= link_to comment.user.username, comment.user %></strong> said:</p>
        <p><%= comment.comment %></p>
        <p><small><em><%= time_ago_in_words(comment.created_at) %> ago</em></small></p>
      </div>
    <% end %>
  </div>
<% end %>

