<p id="notice"><%= notice %></p>

<h1>Blog Users</h1>


<div class="row">
  <% @users.each do |user| %>
  <div class="col-md-6">

   <div class="panel panel-default">

    <div class="panel-heading">
      <h3><%= link_to user.username, user %></h3>
    </div>

    <div class="panel-body">
      <p>Name: <%= user.name %></p>
      <p>Email: <%= user.email %></p>
      <p>Blog Title: <%= user.blog_name %></p>
    </div>

    <div class="panel-footer">
    <%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning" %>
    <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %>
    </div>

    </div>
    </div>

<% end %>


</div>

