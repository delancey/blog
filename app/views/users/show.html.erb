<strong>All posts by <%= @user.username %></strong>

 
<p id="notice"><%= notice %></p>

<div class="panel panel-info">
	<div class="panel-heading">
		<h3><%= link_to @user.username, @user %></h3>
	</div>

	<div class="panel-body">
		<p>Name: <%= @user.name %></p>
		<p>Email: <%= @user.email %></p>
		<p>Blog Title: <%= @user.blog_name %></p>
	</div>

<% if @user.posts.presence %>
	<div class="panel panel-info">
		<div class="panel-heading">
			<h4>Blog Posts by <%= @user.username %></h4>
		</div>
	<% @user.posts.each do |post| %>
		<div class="panel-body">
			<h3><%= link_to post.title, post %></h3>
			<p><small><em><%= time_ago_in_words(post.created_at) %> ago</em></small></p>
			<p><%= post.post_entry[0..100] %>...</p>
			<p><%= link_to "Click to Read More", post %></p>
		</div>
    <% end %>
    </div>
<% end %>

	<div class="panel-footer">
	<%= link_to 'Edit User', edit_user_path(@user), class: "btn btn-warning" %>
	<%= link_to 'Back to all Users', users_path, class: "btn btn-default" %>
	</div>